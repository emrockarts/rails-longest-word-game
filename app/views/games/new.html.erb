<h2>New Game</h2>

<ul class="list">
  <% @letters.each do |letter| %>
    <div class="letters"><li><%= letter %></li></div>
  <% end %>
</ul>

<form action="/score" method="post" class="form">
  <input type="text" name="word">
  <input type="submit" value="Play">
  <input type="hidden" name="lettersgrid" value="<%= @letters.join %>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

